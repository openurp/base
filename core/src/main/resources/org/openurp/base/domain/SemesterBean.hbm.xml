<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
 xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping classpath://org/hibernate/hibernate-mapping-4.0.xsd" 
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" package="org.openurp.base.domain"
  default-access="org.beangle.data.jpa.hibernate.PropertyAccessor">

    <class name="SemesterBean" entity-name="org.openurp.base.Semester" >
        <cache usage="read-write" region="org.openurp.base"/>
        <id name="id" unsaved-value="null" type="integer"><generator class="code"/></id>
        <property name="code" length="15" unique="true"  not-null="true"/>
        <property name="name" length="10"  not-null="true"/>
        <property name="schoolYear" length="10"  not-null="true"/>
        <many-to-one name="calendar"  not-null="true"/>
        <property name="firstDay" type="weekday"  not-null="true"/>
        <property name="beginOn"  not-null="true"/>
        <property name="endOn"  not-null="true"/>
    </class>

</hibernate-mapping>