<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
 xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping classpath://org/hibernate/hibernate-mapping-4.0.xsd" 
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" package="org.openurp.base.domain.code"
  default-access="org.beangle.data.jpa.hibernate.PropertyAccessor">
 
  <class name="CodeCategory">
    <cache usage="read-write" region="org.openurp.base"/>
    <id name="id" unsaved-value="null" type="integer"><generator class="date"/></id>
    <property name="name" length="20" unique="true" not-null="true"/>
    <property name="indexno"  not-null="true"/>
    <many-to-one name="parent" class="org.openurp.base.domain.code.CodeCategory"/>
    <bag name="children" inverse="true" collection-type="seq" cascade="all-delete-orphan">
     <key column="parent_id" />
     <one-to-many class="org.openurp.base.domain.code.CodeCategory"/>
    </bag>
  </class>
</hibernate-mapping>