<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
 xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping classpath://org/hibernate/hibernate-mapping-4.0.xsd" 
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" package="org.openurp.base.model"
  default-access="org.beangle.data.jpa.hibernate.PropertyAccessor">

    <class name="DepartmentBean" entity-name="org.openurp.base.Department" >
        <cache usage="read-write" region="org.openurp.base"/>
        <id name="id" unsaved-value="null" type="integer"><generator class="code"/></id>
        <property name="code" length="10" unique="true"  not-null="true"/>
        <property name="name" length="80" unique="true"  not-null="true"/>
        <property name="enName" length="100"/>
        <property name="shortName" length="100"/>
        <property name="beginOn"/>
        <property name="endOn"/>
        <property name="teaching" not-null="true"/>
        <property name="indexno" length="20" unique="true"  not-null="true"/>
        <many-to-one name="parent" class="org.openurp.base.Department"/>
        <bag name="children" collection-type="seq" inverse="true">
            <cache usage="read-write" region="org.openurp.base"/>
            <key><column name="parent_id" /></key>
            <one-to-many class="org.openurp.base.Department"/>
        </bag>
    </class>

</hibernate-mapping>