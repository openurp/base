<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
 xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping classpath://org/hibernate/hibernate-mapping-4.0.xsd" 
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" package="org.openurp.base.model.code"
  default-access="org.beangle.data.jpa.hibernate.PropertyAccessor">
 
  <class name="CodeMeta">
    <cache usage="read-write" region="org.openurp.base"/>
    <id name="id" unsaved-value="null" type="integer"><generator class="date"/></id>
    <property name="name" length="20" unique="true" not-null="true"/>
    <property name="title" length="20" unique="true" not-null="true"/>
    <property name="className" length="20" not-null="true"/>
    <many-to-one name="category" column="category_id"/>
  </class>
</hibernate-mapping>